.dex-promotion-main {

    .dex-promotion-wrapper {
        padding: calc(2rem / var(--font-body-scale));
        text-align: left;
        max-width: 40rem;

        img {
            width: 60%;
            display: block;
        }
    }


    .dex-promotion-form__field-wrapper {
        width: 90%;
        .field {
            display: block;
            &:before {
                visibility: hidden;
            }
            &::after {
                visibility: hidden;
            }
        }
    }

    .dex-promotion-form__button {
        margin-top: 1.2rem;
        width: 100%;
    }
}