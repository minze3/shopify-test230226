.dex-promotion-main {

    .dex-promotion-header {
        display: flex;
        flex-direction: column;
        height: 100vh;
    }

    .dex-promotion-signup {
        flex: 1;

    }

    .dex-promotion-box {
        height: 100%;
    }

    // .dex-promotion-wrapper {
    //     height: 100%;
