    //     text-align: left;
    //     max-width: 40rem;
    //     display: flex;
    //     flex-direction: column;
    // }


    .dex-promotion-wrapper__image {
        flex:1 img {
            width: 60%;
            display: block;
        }
    }

    .dex-promotion-form__field-wrapper {
        width: 90%;

        .field {
            display: block;

            &:before {
                visibility: hidden;
            }

            &::after {
                visibility: hidden;
            }
        }
    }

    .dex-promotion-form__button {
        font-size: calc(var(--font-heading-scale) * 1.5rem);
        margin-top: 1.2rem;
        width: 100%;
    }

    .dex-promotion-reserve {
        background-color: #ff0000;
        padding: 1.5rem;
        font-size: calc(var(--font-heading-scale) * 3rem);
        text-align: center;
    }




}