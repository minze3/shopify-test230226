.dex-promotion-main {

    .dex-promotion-header {
        display: flex;
        flex-direction: column;
        height: 100vh;
    }

    .dex-promotion-signup {
        flex: 1;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .dex-promotion-box {
        height: 100%;
    }

    .dex-promotion-wrapper__image {
        flex: 1;

        img {
            width: 60%;
            display: block;
        }
    }

    .dex-promotion-wrapper__desc {
        margin-bottom: 5rem;
    }

    .dex-promotion-wrapper {
        height: 100%;
        padding: calc(2rem / var(--font-body-scale));
        text-align: left;
        max-width: 40rem;
        display: flex;
        flex-direction: column;
    }

    .dex-promotion-form {
        margin-bottom: 2rem;
    }

    .dex-promotion-form__field-wrapper {
        margin-left: 10%;

        .field {
            display: block;

            &:before {
                visibility: hidden;
            }

            &::after {
                visibility: hidden;
            }
        }
    }

    .dex-promotion-form__button {
        font-size: calc(var(--font-heading-scale) * 1.5rem);
        margin-top: 1.2rem;
        width: 100%;
        padding: 0;
        min-height: calc(4.5rem + var(--buttons-border-width)* 2);
    }

    .dex-promotion-reserve {
        background-color: #ff3131;
        font-size: calc(var(--font-heading-scale) * 6.2rem);
        line-height: calc(var(--font-heading-scale) * 10rem);
        text-align: center;
    }

}