.dex-promotion-main {

    .dex-promotion-box {
        display: flex;
        flex-direction: column;
    }
    .dex-promotion-wrapper {
        flex: 1;
        padding: calc(2rem / var(--font-body-scale));
        text-align: left;
        max-width: 40rem;
        display: flex;
        flex-direction: column;

        img {
            width: 60%;
            display: block;
        }
    }
    .dex-promotion-form__field-wrapper {
        width: 90%;

        .field {
            display: block;

            &:before {
                visibility: hidden;
            }

            &::after {
                visibility: hidden;
            }
        }
    }

    .dex-promotion-form__button {
        font-size: calc(var(--font-heading-scale) * 1.5rem);
        ;
        margin-top: 1.2rem;
        width: 100%;
    }
}