  </section>
  {% for num in (6..10) %}
    {%- liquid
      if num < 10 
        assign index = '0' | append: num
      else
        assign index = num
      endif
    -%}
    <section class="dex-promotion-image-{{ index }}">
      <div class="dex-image-box dex-box page-width">
        <div class="pc">
          <img src="{{ 'yang-promotion-pc-'| append:index | append:'.png' | asset_url }}">
        </div>
        <div class="mob">
          <img src="{{ 'yang-promotion-mob-'| append:index | append:'.png' | asset_url }}">
        </div>
      </div>
    </section>
  {% endfor %}
